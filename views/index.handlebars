<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Eat da Burger</h1>
		</div>
	</div>


<div class="row">
	<h5 class="text-center">Enter a burger and click Submit!</h5>
		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/create" method="POST">
				<div class="form-group">
				<textarea type="text" name="description"></textarea><br>
				<button class="btn btn-default" type="submit">Submit</button>
			</form>	
		</div>
</div>



<div class="row">
	<div class="col-md-5">
<h3 class="text-muted">Burgers ready to eat</h3>
<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
		<li>
			<h5>{{this.id}}. {{this.description}}
				<form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit" class="btn btn-default">Devour it!</button>
				</form>
			</h5>
		</li>
	{{/unless}}
	{{/each}}
</ul>
	</div>

<div class="col-md-2"></div>

<div class="col-md-5">
	<h3 class="text-muted">Eaten Burgers</h3>
	<ul>
		{{#each burgers}}
			{{#if this.devoured}}
				<li>
					<h5 class="text-muted">{{this.id}}. {{this.description}}</h5>
				</li>
			{{/if}}
		{{/each}}
	</ul>
</div>
</div>
